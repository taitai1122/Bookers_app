<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <thead>

    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <td><%= book.title %></td>
  <td><%= book.body %></td>

  <td><%= link_to "show", book_path(book.id) %></td>
  <td><%= link_to "Edit", book_path(@books) %></td>
  <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>

</table>




<% end %>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

  <div>Title</div>
  <p><%= f.text_field :title %></p>

  <div>Body</div>
  <p><%= f.text_area :body %></p>

  <p>
  <%= f.submit 'Create Book' %>
  </p>

<% end %>
